{
  "name": "hire-me-please",
  "version": "1.0.0",
  "description": "A web app where job seekers can track job applications, statuses, and interviews.",
  "main": "index.js",
  "scripts": {
    "start": "cd frontend && npm start",
    "build": "react-scripts build --prefix frontend",
